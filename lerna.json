{
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    }
  }
}
